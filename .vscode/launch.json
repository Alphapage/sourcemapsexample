{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node2",
            "request": "launch",
            "name": "Launch Node",
            "program": "${workspaceRoot}\\index.js",
             "sourceMaps": true,
            "diagnosticLogging": true
        },
         {
            "type": "node2",
            "request": "launch",
            "name": "Launch Node with debugServer",
            "program": "${workspaceRoot}\\index.js",
             "sourceMaps": true,
            "diagnosticLogging": true,"debugServer": 4712
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Express",
            "program": "${workspaceRoot}\\express.js",
             "sourceMaps": true,
            "diagnosticLogging": true
        },{
            "name": "Launch localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/public"
        },
        {
    "name": "Attach to Process",
    "type": "node",
    "request": "attach",
    "port": 4712
}
    ]
}